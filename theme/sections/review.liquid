<div id="overlay" class="ac-overlay" style="display:none;">></div>
<div class="text-center">
  {% for block in section.blocks %}
    {% if block.type == "header-image" %}
       {% if block.settings.image != blank %}
         {% assign img_url = block.settings.image | img_url: 'master' %}
          <div class="header-image" >
            <img src="{{ img_url }}" alt="stylists-image"/>
          </div>
        {% endif %}
    {% endif %}
    {% if block.type == "stylists-header" %}
      {% render 'stylists_header',
         title: block.settings.title,
         description: block.settings.description,
       %}
    {% endif %}
    {% if block.type == 'Marquees' and  block.settings.text_to_scroll != blank %}
      {% render 'component_marquee',
          data_id: block.id,
          wrapper_class: secondary.settings.marquee_color,
          text_to_scroll: block.settings.text_to_scroll
       %}
    {% endif %}
      {% endfor %}
            <div class="ac-stylist__conainer text-center">
        {% for block in section.blocks %}
        {% assign nbge_count = nbge_count | plus: 1 %}
        {% if block.type == 'stylists-title' %}
          {% render 'stylists_title',
              title: block.settings.title
           %}
        {% endif %}
        {% if block.type == 'Stylist' %}
          {% render 'stylist_block',
             id:  block.id,
             photo: block.settings.photo,
             instagram_link: block.settings.instagram_link,
             stylist_name: block.settings.stylist_name,
             stylist_district: block.settings.stylist_district,
             instagram_title: block.settings.instagram_title,
             stylist_about: block.settings.stylist_about,
             skills_title: block.settings.skills_title,
             skill_one: block.settings.skill_one,
             skill_two: block.settings.skill_two,
             skill_three: block.settings.skill_three,
             revers_block: block.settings.revers_block
           %}
        {% endif %}
    {% endfor %}
        </div>
</div>

{% schema %}
  {
    "name": "Review",
    "blocks": [
      {
        "type": "header-image",
        "name": "Header image",
        "settings": [
           {
            "type": "image_picker",
            "id": "image",
            "label": "Header mage"
          }
        ]
      },
      {
        "type": "Marquees",
        "name": "Marquees",
        "settings": [
          {
            "type": "header",
            "content": "Margin Settings"
          },
          {
            "type": "text",
            "id": "margin_top_mobile",
            "label": "Mobile Section Margin Top",
            "info": "Enter number only. Default 0. Units in px.",
            "default": "0"
          },
          {
            "type": "text",
            "id": "margin_bottom_mobile",
            "label": "Mobile Section Margin Bottom",
            "info": "Enter number only. Default 50. Units in px.",
            "default": "50"
          },
          {
            "type": "text",
            "id": "margin_top",
            "label": "Desktop Section Margin Top",
            "info": "Enter number only. Default 0. Units in px.",
            "default": "0"
          },
          {
            "type": "text",
            "id": "margin_bottom",
            "label": "Desktop Section Margin Bottom",
            "info": "Enter number only. Default 50. Units in px.",
            "default": "50"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Marqee Title"
          },
          {
            "type": "text",
            "id": "section_class",
            "label": "Section class (Optional)"
          },
          {
            "type": "header",
            "content": "Marquee Settings"
          },
          {
            "type": "select",
            "id": "marquee_color",
            "label": "Marquee Color",
            "options": [
              {"value": "ico--accent-secondary", "label": "Orange"},
              {"value": "ico--accent-primary", "label": "Pink"},
              {"value": "", "label": "Black"}
            ],
            "default": ""
          },
          {
            "type": "html",
            "id": "text_to_scroll",
            "label": "Text to Scroll"
          }
        ]
      }, {
        "type": "Stylist",
        "name": "Stylist info",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "image_picker",
            "id": "photo",
            "label": "Photo",
            "info": "Photo of stylist"
          },
          {
            "type": "text",
            "id": "stylist_name",
            "label": "Stylist name"
          },
          {
            "type": "text",
            "id": "stylist_district",
            "label": "Stylist district"
          },
          {
            "type": "text",
            "id": "instagram_title",
            "label": "Instagram link title"
          }, {
            "type": "text",
            "id": "instagram_link",
            "label": "Instagram url"
          }, {
            "type": "textarea",
            "id": "stylist_about",
            "label": "About stylist"
          }, {
            "type": "text",
            "id": "skills_title",
            "label": "Skills title"
          }, {
            "type": "text",
            "id": "skill_one",
            "label": "Skill 1"
          }, {
            "type": "text",
            "id": "skill_two",
            "label": "Skill 2"
          }, {
            "type": "text",
            "id": "skill_three",
            "label": "Skill 3"
          }, {
            "type": "checkbox",
            "id": "revers_block",
            "label": "Revers block",
            "default": false
          }
        ]
      }, {
        "type": "stylists-header",
        "name": "Stylists header",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          }
        ]
      }, {
        "type": "stylists-title",
        "name": "Stylists title",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }
        ]
      }
    ]
  }
{% endschema %}

<style>
  .header-image {
    width: 100%;
    height: auto;
    margin-bottom: 70px;
    @media (max-width: 1200px){
      margin-bottom: 50px;
    }
    @media (max-width: 700px){
      margin-bottom: 20px;
    }
  }
  .header-image img {
    height: 100%;
    width: 100%;
  }

  .ac-stylist__conainer {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ac-stylist__box {
    display: inline-flex;
    flex-direction: column;
    margin-bottom: 20px;
    align-items: center;
    justify-content: center;
    text-align: center;
    max-width: 375px;
    width: 100%;
  }
  .ac-stylist-box__image-wrap {
    margin-bottom: 30px;
  }
 .ac-stylist-box__image {
    max-width: 265px;
    width: 100%;
    height: auto;
    border-radius: 100%;
    cursor: pointer;
    transition: all 0.3s ease-out;
  }
  .ac-stylist-box__title {
    font-size: 26px;
    font-style: normal;
    font-weight: 800;
    line-height: 38px; /* 146.154% */
    margin-bottom: 0;
  }
  .ac-stylist-box__district.ac-stylist-box__district {
    font-family: "Founders Grotesk Mono", helvetica, sans-serif;
    font-weight: 400;
    text-transform: uppercase;
    line-height: 24px; /* 150% */
  }
  
  /*  Popup  */

  .ac-popup-review__box {
    display: flex;
    width: 100%;
    /* position: relative; */
    margin-top: 135px;
    /* justify-content: space-between;
    z-index: 2; */
  }
  .ac-overlay {
    display: none;
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
  }
  
  .ac-popup-review {
    display: none;
    background: #FEFAF0;
    width: 80%;
    max-width: 670px;
    position: fixed;
    transition: all 5s ease-in-out;
    padding: 40px;
    top: 60%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 75px;
    z-index: 1002;
   }

  .ac-popup-review__image-wrap {
    position: absolute;
    left: calc(50% - 132px);
    top: -132px;
    display: flex;
    z-index: 2;
    max-width: 265px;
  }
  
  .ac-popup-review__image {
    border-radius: 100%;
    border: 10px #FEFAF0 solid;
    width: 100%;
    height: auto;
    cursor: pointer;
    transition: all 0.3s ease-out;
  }

  .ac-popup-review__stylist-info {
    width: 100%;
    margin-bottom: 40px;
  }
  .ac-popup-review-stylist__title {
    font-size: 32px;
    font-weight: 700;
    line-height: 38px;
    margin-bottom: 0;
  }
  .ac-popup-review-stylist__district {
    font-family: "Founders Grotesk Mono", helvetica, sans-serif;
    color: #00000040;
    font-size: 20px;
    font-weight: 400;
    line-height: 34px; /* 170% */
    text-transform: uppercase!important;
  }
  .ac-popup-review-stylist__link {
    display: inline-block;
    color: #FF5EDB;
    font-weight: 500;
    line-height: 24px; /* 150% */
    text-transform: lowercase;
    /* border-bottom-style: solid;
    border-bottom-width: 16px;
    border-image: url('{{ "vawe.svg" | asset_url }}' ) 30; */
  }
  .ac-popup-review-stylist__link:after {
    content: "";
    display: block;
    height: 9px;
    background-image: url('{{ "vawe.svg" | asset_url }}');
    background-repeat: repeat-x;
    background-position: center bottom;
}
  .ac-popup-review-stylist__about {
    text-align: center;
    text-transform: initial!important;
    margin-bottom: 20px;
    font-size: 14px;
  }
  .ac-popup-review-stylist__skills-title {
    font-family: "Founders Grotesk Mono", helvetica, sans-serif;
    font-size: 20px;
    font-weight: 400;
    line-height: 40px; /* 200% */
    text-transform: uppercase;
    margin-bottom: 5px;
  }
  .ac-popup-review-stylist__skills {
    font-family: "Founders Grotesk Mono", helvetica, sans-serif;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
  }

  .ac-popup-review-stylist__skill-item {
    padding: 7px 26px;
    color: #FEFAF0;
    font-family: "Founders Grotesk Mono", helvetica, sans-serif;
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 1px;
    text-transform: uppercase;
    line-height: 1;
    border-radius: 106px;
    background: #FF6B26;
    margin-right: 16px;
    margin-bottom: 10px;
    white-space: nowrap;
  }
  

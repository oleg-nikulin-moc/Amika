  .ac-popup-review__close-btn {
    position: absolute;
    top: 20px;
    right: 20px;
    transition: all 200ms;
    font-size: 30px;
    font-weight: bold;
    text-decoration: none;
    color: #00000030;
    padding: 20px;
    cursor: pointer;
  }
  
  .ac-popup-review__close-btn:hover {
    color: #000;
  }

   @media (max-width: 450px) {
    .ac-popup-review-stylist__district {
      font-size: 16px;
    }
    .ac-popup-review__stylist-info {
      margin-bottom: 16px; 
    }
    .ac-popup-review__image-wrap {
      left: calc(50% - 90px);
      top: -90px;
      max-width: 180px;
    }
    .ac-popup-review__box {
      margin-top: 80px;
    }
    .ac-popup-review-stylist__skills {
      flex-direction: column;  
    }
    .ac-popup-review-stylist__skill-item {
      margin-bottom: 16px; 
      align-items: center;
    }
    .ac-popup-review {
      border-radius: 20px;
    }
    .ac-popup-review__close-btn {
      top: 0;
      right: 0;
    }
    .ac-popup-review-stylist__about {
      font-size: 12px;
      margin-bottom: 8px;
    }
  }
</style>
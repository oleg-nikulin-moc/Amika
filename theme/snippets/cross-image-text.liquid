          <h2 class="ac-image-text--heading ac-title" >{{title}}</h2>
        {% endif %}
        {% if description != blank %}
            <div class="ac-image-text--description ac-offset__bottom-sm">{{ description }}</div>
        {% endif %}
        {% if note != blank %}
            <p class="ac-image-text--note">{{note}}</p>
        {% endif %}
        {% if downloadApp == true %}
            {% render 'download_app' %}
        {% endif %}

    function validatePhoneNumber(phoneNumber) {
        // Remove all non-digit characters
        const cleanedNumber = phoneNumber.replace(/\D/g, '');

        // Check if the number matches the USA or Canada format
        const usaRegex = /^(\+?1)?[2-9]\d{2}[2-9](?!11)\d{6}$/;
        const canadaRegex = /^(\+?1)?[2-9](?:[02-9]\d|1[02-9]|1[02-9]\d{2}|[02-9]\d{3})[2-9]\d{6}$/;

        return usaRegex.test(cleanedNumber) || canadaRegex.test(cleanedNumber);
    }


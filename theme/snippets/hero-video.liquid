{% assign image_url = image | image_url %}
{% assign videoUrl = video_url %}
<div class="ac-hero-video__description ac-container--mobile">
  {% if heading != blank %}
      <h2 class="ac-hero-video__title" >{{ heading }}</h2>
  {% endif %}

  {% if subheading != blank %}
      <p class="ac-hero-video__subtitle" >{{ subheading }}</p>
  {% endif %}
</div>

{% if video != blank %}
